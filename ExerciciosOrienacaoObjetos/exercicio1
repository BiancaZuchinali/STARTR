#include <iostream>
#include <string>
#include <iomanip>

using namespace std;

class Produto {
  private:
    string nome;
    double preco;

  public:
     Produto() {
          nome = "";
          preco = 0.0;
     }

    void setNome(string nome) {
        this->nome = nome;
    }

    void setPreco(double preco) {
        this->preco = preco;
    }

    string getNome() {
        return nome;
    }

    double getPreco() {
        return preco;
    }
    string toString() {
        return "Nome: " + getNome() + " Pre√ßo: R$ " + to_string(getPreco());
    }
};

class Aplicacao {
  private:
    Produto produtos[5]; 

  public:
    Aplicacao() {
        for (int i = 0; i < 5; i++) {
            produtos[i].setNome("Produto " + to_string(i + 1));
            produtos[i].setPreco((i + 2) * 10.5);
        }
    }

    void exibirProdutos() {
        for (int i = 0; i < 5; i++) {
            cout << produtos[i].toString() << endl;
        }
    }
};

int main() {
    Aplicacao app; 
    app.exibirProdutos(); 
}
